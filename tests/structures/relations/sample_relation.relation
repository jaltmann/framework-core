{
  "name": "sample_relation",
  "entities":
  {
    "uid":
    {
      "type": "bigint",
      "unsigned": true,
      "nullable": false,
      "readonly": true,
      "options": ["auto_increment"]
    },
    "hash":
    {
      "type": "varchar",
      "length": 16,
      "nullable": false,
      "readonly": true
    },
    "hashnum":
    {
      "type": "bigint",
      "unsigned": true,
      "nullable": false,
      "readonly": true
    },
    "state":
    {
      "type": "flag",
      "flags":
      {
        "active": {"idx": 0, "description": "User is active"},
        "verified": {"idx": 1, "description": "User is verified"},
      }
    }
  },
  "keys":
  {
    "primary": ["uid"],
    "unique":
    {
      "hash": ["hash"]
    },
    "index":
    {
      "hashnum": ["hashnum"]
    }
  }
}

